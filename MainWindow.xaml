<Window x:Class="FitodietCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FitodietCalc" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="White">

    <DockPanel Background="#B6E7D7">

        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#EEFFF4" Padding="5" MouseDown="Header_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="/Resources/logoFitodietCalc.jpg"
               Width="110" Height="75" Margin="0,0,2,0" Stretch="Fill"
               Grid.Column="0"/>

                <TextBlock x:Name="VersionTextBlock"
                   Foreground="Black"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,0"
                   FontSize="12"
                   Grid.Column="1"/>
            </Grid>
        </Border>



        <!-- Menu -->
        <Border DockPanel.Dock="Left" Width="200" Background="#A2D6C4" Padding="10" Margin="0,0,5,0">
            <DockPanel LastChildFill="True">
                <!-- Botones de navegación -->
                <StackPanel DockPanel.Dock="Top">
                    <Button Content="🧍 Nuevo paciente" Margin="0,5" Padding="10"/>
                    <Button Content="🔍 Buscar / cargar paciente" Margin="0,5" Padding="10"/>
                    <Button Content="📋 Listado de pacientes" Margin="0,5" Padding="10"/>
                    <Button Content="📊 Resultados" Margin="0,5" Padding="10"/>
                    <Button Content="🍽️ Plan de dieta (Fase 2)" Margin="0,5" Padding="10" IsEnabled="False"/>
                </StackPanel>

                <!-- Botón Salir en la parte inferior -->
                <Button Content="🚪 Salir" DockPanel.Dock="Bottom" Margin="0,5,0,0" Padding="10" VerticalAlignment="Bottom" Click="Salir_Click"/>
            </DockPanel>
        </Border>


        <!-- Dynamic content area -->
        <Border Background="White" Padding="20" Margin="5">
            <ContentControl x:Name="ContentArea"/>
        </Border>

    </DockPanel>
</Window>
